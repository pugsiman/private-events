<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control', required: true %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control ", size:'20x3', required: true %>
  <br>
  <%= f.label :location %>
  <%= f.text_field :location, class: "form-control", required: true %>
  <br>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
      <%= f.label :When? %>
      <div class="input-group date datepicker">
        <%= f.text_field :date, class: "form-control datepicker", required: true %>
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-calendar"></i>
        </span>
      </div>
    </div>
  </div>
  <br>
  <%= f.submit @event.new_record? ? "Create event" : "Edit event", class: "btn btn-primary",
      data: { disable_with: 'Submitting...' } %>
<% end %>
